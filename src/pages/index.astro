---
import Layout from "../layouts/Layout.astro";
import logo from "../logo.svg";
---

<style>
  input {
    border-radius: 2rem;
    box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px,
      rgba(60, 64, 67, 0.15) 0px 1px 3px 1px;
    color: var(--primary);
  }

  input::placeholder {
    color: var(--primary);
  }

  input:focus {
    outline: none;
    border: 1px solid var(--primary);
  }

  #font-editor {
    /* height: 11.25rem; */
    border-radius: 2rem;
    box-shadow: rgba(0, 0, 0, 0.14) 0px 1px 4px;
  }

  .bi-info-lg {
    color: var(--primary);
  }

  i {
    color: var(--dark);
  }

  .color-selector--primary {
    background-color: var(--primary);
  }

  .color-selector--dark {
    background-color: var(--dark);
  }

  #font-weight i {
    margin-left: -5px;
  }

  button {
    background-color: var(--primary);
    box-shadow: rgba(0, 0, 0, 0.4) 0px 2px 4px,
      rgba(0, 0, 0, 0.3) 0px 7px 13px -3px,
      rgba(0, 0, 0, 0.2) 0px -3px 0px inset;
  }

  button:active {
    box-shadow: none;
  }

  button[disabled] {
    visibility: hidden;
  }

  /* START FULLSCREEN MESSAGE STYLES */
  #fullscreen-container {
    background-color: var(--primary);
  }

  @media screen and (orientation: portrait) {
    #blurt-message {
      font-size: 10vh;
    }
  }

  @media screen and (orientation: landscape) {
    #blurt-message {
      font-size: 12vw;
    }
  }
  /* END FULLSCREEN MESSAGE STYLES */

  /* START FULLSCREEN UNSUPPORTED MESSAGE STYLES */
  #unsupported-message-container {
    background-color: var(--light);
  }
  /* END FULLSCREEN UNSUPPORTED MESSAGE STYLES */
</style>

<Layout>
  <section class="vh-100 flex justify-center items-center flex-column pv4 ph3">
    <!-- Info banner -->
    <div class="flex justify-center items-center">
      <a href="#" class="link mr1 f6">Why I made this app</a>
      <img src="/right-arrow-up.svg" width="12" alt="Opens a new browser tab" />
    </div>

    <!-- Message area container -->
    <div class="w-100 mw6 flex justify-center items-center mt4 mb3">
      <input
        type="text"
        name="message"
        id="message"
        class="w-100 bg-white bn pa4 lh-copy h4"
        placeholder="Start typing your message here..."
      />
    </div>

    <div>
      <!-- TODO: Add clear feature for input and consider "storing" previously written messages -->
    </div>

    <!-- Trigger button -->
    <div
      id="button-container"
      class="w-100 mw6 flex justify-center items-center mt4 pb3"
    >
      <button id="trigger-button" class="w-100 h3 ba br4 white pointer" disabled
        >Blurt It Out</button
      >
    </div>
  </section>

  <!-- START OFF CANVAS APP CONTAINER -->
  <div
    id="fullscreen-container"
    class="ph3 dn justify-center items-center absolute absolute--fill"
  >
    <p id="blurt-message" class="lh-copy tc mv3 white ph2">
      <!-- User's message (i.e. Blurt) will go here. -->
    </p>
  </div>
  <!-- END OFF CANVAS APP CONTAINER -->

  <!-- START OFF CANVAS LANDING PAGE FOR UNSUPPORTED DEVICES (I.E. Those lacking Fullscreen API...iPhones, come on Apple) -->
  <!-- When active: replace dn with flex justify-center absolute absolute--fill -->
  <div
    id="unsupported-message-container"
    class="w-100 vh-100 ph3 dn justify-center items-center flex-column absolute absolute--fill"
  >
    <img src={logo} alt="BlurtItApp logo" width="40" />
    <p id="unsupported-message-text" class="lh-copy tc mv3 measure">
      BlurtItApp only works on tablet, desktop, and Android for now.
    </p>
  </div>
</Layout>
